# Production Environment Configuration
ENVIRONMENT=production

# ===================================
# MLflow Configuration - Production
# ===================================
MLFLOW_PORT=5000
MLFLOW_DB_NAME=mlflow_prod
MLFLOW_DB_USER=mlflow_prod
MLFLOW_DB_PASSWORD=<your_secure_password>
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts
MLFLOW_TRACKING_USERNAME=<your_username>
MLFLOW_TRACKING_PASSWORD=<your_secure_password>

# For production, consider using external PostgreSQL and S3/Cloud Storage:
# MLFLOW_BACKEND_STORE_URI=postgresql://<user>:<password>@<host>:<port>/<database>
# MLFLOW_ARTIFACT_ROOT=s3://<bucket-name>/mlflow-artifacts

# ===================================
# Langfuse Configuration - Production
# ===================================
LANGFUSE_PORT=3000
LANGFUSE_URL=https://your-domain.com

# Langfuse PostgreSQL
LANGFUSE_DB_NAME=langfuse_prod
LANGFUSE_DB_USER=langfuse_prod
LANGFUSE_DB_PASSWORD=<your_secure_password>

# For production, use external PostgreSQL:
# DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<database>

# Langfuse ClickHouse (Analytics Database)
LANGFUSE_CLICKHOUSE_DB=default
LANGFUSE_CLICKHOUSE_USER=default
LANGFUSE_CLICKHOUSE_PASSWORD=<your_secure_password>

# For production, use managed ClickHouse:
# CLICKHOUSE_URL=https://<clickhouse-host>:8123
# CLICKHOUSE_CLUSTER_ENABLED=true
# CLICKHOUSE_CLUSTER_NAME=<cluster-name>

# Langfuse MinIO/S3 (Object Storage)
LANGFUSE_MINIO_ROOT_USER=<not_used_in_production>
LANGFUSE_MINIO_ROOT_PASSWORD=<not_used_in_production>
LANGFUSE_S3_BUCKET_NAME=langfuse-prod

# Production S3 Configuration
LANGFUSE_S3_EVENT_UPLOAD_ENABLED=true
LANGFUSE_S3_EVENT_UPLOAD_BUCKET=<your_bucket>
LANGFUSE_S3_EVENT_UPLOAD_REGION=<your_region>
LANGFUSE_S3_EVENT_UPLOAD_ACCESS_KEY_ID=<your_access_key>
LANGFUSE_S3_EVENT_UPLOAD_SECRET_ACCESS_KEY=<your_secret_key>
# Remove these for production S3 (not MinIO):
# LANGFUSE_S3_EVENT_UPLOAD_ENDPOINT=
# LANGFUSE_S3_EVENT_UPLOAD_FORCE_PATH_STYLE=

LANGFUSE_S3_MEDIA_UPLOAD_ENABLED=true
LANGFUSE_S3_MEDIA_UPLOAD_BUCKET=<your_bucket>
LANGFUSE_S3_MEDIA_UPLOAD_REGION=<your_region>
LANGFUSE_S3_MEDIA_UPLOAD_ACCESS_KEY_ID=<your_access_key>
LANGFUSE_S3_MEDIA_UPLOAD_SECRET_ACCESS_KEY=<your_secret_key>
# Remove these for production S3 (not MinIO):
# LANGFUSE_S3_MEDIA_UPLOAD_ENDPOINT=
# LANGFUSE_S3_MEDIA_UPLOAD_FORCE_PATH_STYLE=

# Langfuse Security Keys - MUST BE DIFFERENT FROM LOCAL
# Generate using: openssl rand -base64 32
LANGFUSE_NEXTAUTH_SECRET=<generate_secure_secret>
LANGFUSE_SALT=<generate_secure_salt>
# For ENCRYPTION_KEY, use: openssl rand -hex 32 (must be 64 hex characters)
LANGFUSE_ENCRYPTION_KEY=<generate_secure_encryption_key_64_chars_hex>

# Langfuse Production Settings
LANGFUSE_TELEMETRY_ENABLED=false
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=false
LANGFUSE_AUTO_POSTGRES_MIGRATION_DISABLED=false
LANGFUSE_AUTO_CLICKHOUSE_MIGRATION_DISABLED=false
